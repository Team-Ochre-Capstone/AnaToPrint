
// This tells typescript how to compile the react app code



{
  "compilerOptions": {
    "target": "ES2020",             //compiling to modern java
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"], //what api's are available
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}